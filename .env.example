# ============================================
# متغيرات البيئة - مثال
# انسخ هذا الملف إلى .env وقم بتحديث القيم
# ============================================

# بيئة التطوير/الإنتاج
NODE_ENV=production

# منفذ الخادم
PORT=3000

# قاعدة البيانات MongoDB
# احصل على رابط الاتصال من: https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# بيانات دخول مدير المتجر
MANAGER_USERNAME=admin_sultan
MANAGER_PASSWORD=StrongPassword123!

# JWT Secret (للمستقبل)
JWT_SECRET=your_jwt_secret_key_here

# CORS Origin
CORS_ORIGIN=https://your-domain.com

# معلومات المتجر
STORE_NAME=السلطان
STORE_EMAIL=email@example.com
STORE_PHONE=0000000000
STORE_LOCATION=الموقع

# إعدادات الأمان
MAX_IMAGE_SIZE=5242880
MAX_TEXT_LENGTH=500
SESSION_TIMEOUT=3600000

# إعدادات البريد الإلكتروني
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# إعدادات التسجيل
LOG_LEVEL=info
